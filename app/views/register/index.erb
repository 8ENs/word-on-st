<h1>Register new user</h1>
<hr/>
<% if @user.errors.any? %>
  <div style="color: red">
    <strong>Some issues came up. Please fix them:</strong>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form method="post" action="/register">
  <div>
    <label>Name:</label>
    <input type="text" name="user_name" placeholder="name" value="<%= @user.name %>" required>
  </div>
  <div>
    <label>Email:</label>
    <input type="email" name="user_email" placeholder="email" value="<%= @user.email %>" required>
  </div>
  <div>
    <label>Password:</label>
    <input type="password" name="user_password" placeholder="password" value="<%= @user.password %>" required>
    <span> (min: 3 characters)</span>
  </div>
  
  <div>
    <input type="submit" value="Submit">
  </div>
</form>